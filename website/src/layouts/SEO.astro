---
const title = 'Richard Kozyak';
const description = 'A minimalistic website created to show off some of my personal projects';
const ogImage = '/images/seoImage.jpg';
---
<meta name="robots" content={index ? "index, follow" : "noindex, nofollow"} />
<meta name="og:site_name" property="og:site_name" content="Richard Kozyak" />
<meta name="og:type" property="og:type" content="website" />
<meta
  property="og:description"
  content="A minimalistic website created to show off some of my personal projects"
/>
<meta property="og:title" content={title} />
<meta property="og:image" content={ogImage} />
<meta name="description" content={description} />