---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Richard Kozyak">
  <main>
    <article class="region prose wrapper hero">
      <h1 style="margin-bottom: clamp(0.5rem, 2vw, 1rem);">Richard Kozyak</h1>

      <h2 class="major-title" style="margin-top: 0;">
        <div id="typed-strings">
          <h2>Computer Science Major at <a href="https://www.gatech.edu/">Georgia Tech</a></h2>
          <h2>Studying Cybersecurity/Privacy and Info Internetworks</h2>
        </div>
        <span id="typed"></span>
      </h2>
    </article>

    <article class="region prose wrapper" style="margin-top: clamp(1rem, 5vw, 2rem);">
      <ul role="list" class="flex features">
        <li class="flex">
          <h3><a href="/about">about</a></h3>
        </li>
        <li class="flex">
          <h3><a href="/projects">projects</a></h3>
        </li>
        <li class="flex">
          <h3><a href="/socials">socials</a></h3>
        </li>
      </ul>
    </article>

    <footer class="region prose wrapper">
      Â© 2024 | Richard Kozyak
    </footer>
  </main>

  <style>
    .major-title {
      min-height: clamp(3em, 5vh, 3em);
    }
  </style>
</Layout>

<script>
  import Typed from "typed.js";
  var typed = new Typed('#typed', {
    stringsElement: '#typed-strings',
    typeSpeed: 50,
    backSpeed: 25, // Slower deleting speed
    backDelay: 5000, // 5-second pause between texts
    loop: true,
  });
</script>